<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.arabicpoetry.presentation.fx.poet.PoetManagementController"
            prefWidth="900" prefHeight="600">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>
    <top>
        <VBox spacing="10">
            <TitledPane text="Poet Details" expanded="true">
                <content>
                    <BorderPane>
                        <center>
                            <GridPane hgap="8" vgap="8">
                                <columnConstraints>
                                    <ColumnConstraints minWidth="90"/>
                                    <ColumnConstraints hgrow="ALWAYS"/>
                                </columnConstraints>
                                <rowConstraints>
                                    <RowConstraints/>
                                    <RowConstraints/>
                                    <RowConstraints/>
                                    <RowConstraints/>
                                </rowConstraints>

                                <Label text="Name:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                                <TextField fx:id="nameField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                                <Label text="Birth Year:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                                <TextField fx:id="birthYearField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                                <Label text="Death Year:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                                <TextField fx:id="deathYearField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                                <Label text="Biography:" GridPane.rowIndex="3" GridPane.columnIndex="0" GridPane.valignment="TOP"/>
                                <TextArea fx:id="biographyArea" prefRowCount="3" wrapText="true"
                                          GridPane.rowIndex="3" GridPane.columnIndex="1"/>
                            </GridPane>
                        </center>
                        <bottom>
                            <HBox spacing="10" alignment="CENTER" style="-fx-padding: 10 0 0 0;">
                                <Button text="Add" onAction="#handleAdd"/>
                                <Button text="Update" onAction="#handleUpdate"/>
                                <Button text="Delete" onAction="#handleDelete"/>
                                <Button text="Clear" onAction="#handleClear"/>
                            </HBox>
                        </bottom>
                    </BorderPane>
                </content>
            </TitledPane>
        </VBox>
    </top>
    <center>
        <BorderPane>
            <top>
                <HBox spacing="8" alignment="CENTER_LEFT" style="-fx-padding: 0 0 10 0;">
                    <Label text="Search:"/>
                    <TextField fx:id="searchField" prefWidth="180"/>
                    <Button text="Search" onAction="#handleSearch"/>
                    <Button text="Refresh" onAction="#handleRefresh"/>
                </HBox>
            </top>
            <center>
                <TableView fx:id="poetTable">
                    <columns>
                        <TableColumn fx:id="idColumn" text="ID" prefWidth="60"/>
                        <TableColumn fx:id="nameColumn" text="Name" prefWidth="220"/>
                        <TableColumn fx:id="birthYearColumn" text="Birth Year" prefWidth="140"/>
                        <TableColumn fx:id="deathYearColumn" text="Death Year" prefWidth="140"/>
                    </columns>
                </TableView>
            </center>
        </BorderPane>
    </center>
</BorderPane>
